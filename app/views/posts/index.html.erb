<% provide(:title, 'Blog') %>

<% if not @posts.empty? %>
<div id="posts">
	<% @posts.each do |post| %>
		<div class="post">
			<div>
				<h3><%= post.title %></h3>
				<h5>posted by <%= post.name %> on <%= post.created_at.strftime("%Y-%m-%d")%></h5>
			</div>
			<% if post.photo.url(:large) != "/photos/large/missing.png" %>
				<div class="post_picture"> 
					<%= image_tag post.photo.url(:large) %>
				</div>
				<div class="post_content">
					<%= simple_format(post.content) %>
				</div>                
			<% else %>
				<div class="post_content left">
					<%= simple_format(post.content) %>
				</div>   
			<% end %>  
			<%= link_to post do %>
				<span><%= pluralize(post.comments.length, "Comment") %></span>
			<% end %>
		</div>
	<% end %>
</div>  
<%= will_paginate @page_results %>
<% else %>
    <h3>It seems like Andrew hasn't posted a blog post yet</h3>
<% end %>
