<p id="notice"><%= notice %></p>
 
<div class="post">
	<h3><%= @post.title %></h3>
	<h5><%= @post.created_at.strftime("%Y-%m-%d")%></h5>
	 
	<% if @post.photo.url(:large) != "/photos/large/missing.png" %>
		<%= image_tag(@post.photo.url(:large), :class => "img-responsive") %>
		<div class="post_content">
			<%= simple_format(@post.content) %>
		</div>                
	<% else %>
		<div class="post_content">
			<%= simple_format(@post.content) %>
		</div>   
	<% end %> 
</div>
 
<br />
 
<%= link_to 'Back to Posts', posts_path, html_options = {:class => "btn btn-primary"} %>